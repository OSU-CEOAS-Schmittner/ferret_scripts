set view 3
set reg/x=150w/y=-80:65
shade/nolabels/set/lev=($lev)/nokey nutrm
PPL DFLTFNT DR
ppl ylab DEPTH (m)
ppl AXLSZE 0.2 0.2
ppl conset .15 2 1 0.04 0.04 0 0 2 0 0
ppl labset, 0.0, 0.0, 0, 0.12
ppl shade
fill/ov/nolabels/lev=($lev)/nokey nutrm
con/set/ov/nolabels/lev=($lev)/nokey nutrm
ppl conset 0.16,,,,,,,,,
ppl contour/ov
shade/nolabels/nokey/lev=(-99)/ov/pal=gray missing(nutrm,-99)
label/nouser `($ppl$xlen)*0.95` `($ppl$ylen)*.1` 1,0,0.2 "PACIFIC 150 W"

set view 4
