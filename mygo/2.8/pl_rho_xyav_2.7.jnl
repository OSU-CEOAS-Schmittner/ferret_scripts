! compares simulated potential temperature profiles horizontally
! averaged in each basin
! use: yes? use mydata.nc; set reg/l=10:13; go pl_temp_xyav
def symbol dataset = $1%1%
def symbol tim = $2%l=@ave%

def sym opt=hlim=23.5:28:.5
go portraitNxN 2 5 7 55
go calc_taylor_rho_2.7 ($dataset) ($tim)

use 1
ppl AXLSZE 0.0 0.16
ppl AXNMTC,1,0
set view 1
plot/set/nolab/($opt) rho_mg[x=@ave,y=@ave,d=lev_annual],rhom[x=@ave,y=@ave]
ppl xfor (i2)
ppl plot

label/nouser `($ppl$xlen)*0.05` `($ppl$ylen)*.1` -1,0,0.2 "Global"

go legline_zdown 7, 3, 2000, 1, .2, "Observations"
go legline_zdown 7, 3, 3000, 2, .2, "Model"

set view 3
set reg/y=40s:90n
plot/set/nolab/($opt) rho_mg_a[x=@ave,y=@ave,d=lev_annual],rhom_a[x=@ave,y=@ave]
ppl xfor (i2)
ppl plot
label/nouser `($ppl$xlen)*0.05` `($ppl$ylen)*.1` -1,0,0.2 "Atlantic"

set view 5
plot/set/nolab/($opt) rho_mg_i[x=@ave,y=@ave,d=lev_annual],rhom_i[x=@ave,y=@ave]
ppl xfor (i2)
ppl plot
label/nouser `($ppl$xlen)*0.05` `($ppl$ylen)*.1` -1,0,0.2 "Indian"

set view 7
plot/set/nolab/($opt) rho_mg_p[x=@ave,y=@ave,d=lev_annual],rhom_p[x=@ave,y=@ave]
ppl xfor (i2)
ppl plot
label/nouser `($ppl$xlen)*0.05` `($ppl$ylen)*.1` -1,0,0.2 "Pacific"

ppl AXLSZE 0.16 0.16
set view 9
can reg/y
plot/set/nolab/($opt) rho_mg_s[x=@ave,y=@ave,d=lev_annual],rhom_s[x=@ave,y=@ave]
ppl xfor (i2)
ppl plot
label/nouser `($ppl$xlen)*0.05` `($ppl$ylen)*.1` -1,0,0.2 "Southern Ocean"

label/nouser `($ppl$xlen)*.5` `($ppl$ylen)*(-0.3)`  0,0,0.2 "@SGs_Q@SR (^oC)"



