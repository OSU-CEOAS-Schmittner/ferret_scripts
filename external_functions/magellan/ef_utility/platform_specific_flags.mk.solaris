#
# platform_specific_includes.mk.solaris
#
# This file is included in the External Function Makefiles and defines
# platform specific macros
# SH 2/2001 debug flags

CCSHFLAG        = -K PIC
CC              = cc
RANLIB          = /bin/touch
CFLAGS          = -c $(CCSHFLAG)
F77             = f77
F77SHFLAG       = -PIC
FFLAGS          = -c -u $(F77SHFLAG)
LD_DYN_FLAGS    = -G -z text -z muldefs
CFLAGS_DEBUG	= -g -Ddebug
FFLAGS_DEBUG	= -g -C -Ddebug

